{
  "manifest_version": 2,
  "name": "Multi dictionary",
  "description": "Popup with translated word by double click",
  "version": "0.0.1.4",
  "options_page": "options.html",
  "browser_action": {
    "default_title": "translate",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["./css/application.css"],
      "js": [
        "application.js",
        "aws-sdk-2.7.16.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "background",
    "unlimitedStorage",
    "notifications"
  ],
  "web_accessible_resources": [
    "dictionaries/yandex/*"
  ]
}
