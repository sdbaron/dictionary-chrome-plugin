{
  "manifest_version": 2,
  "name": "Translator yandex dictionary",
  "description": "Translator",
  "version": "0.1",
  "options_page": "options.html",
  "browser_action": {
    "default_title": "translate",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["display/display.css", "on-page.css"],
      "js": ["display/display.js", "on-page.js"]
    }
  ],
  "permissions": [
    "unlimitedStorage",
    "notifications"
  ]
}